<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/ChatStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.css" />
</head>
<body>
    <div class="navbar">
        <a type="button"
           style="color: white; font-weight: bold; font-weight: 800; font-size: 35px; text-decoration: none;"
            asp-area="" asp-controller="Home" asp-action="Index"> НАЗАД </a>
    </div>
   
    <div class="main">
        <div class="side-menu">
            <a href="#" class="room-button">
                Комната
            </a>
        </div>

        <div class="chat">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
