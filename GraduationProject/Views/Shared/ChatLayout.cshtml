<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/ChatStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.css" />
</head>
<body>
    <div class="navbar">
        <a type="button" asp-area="" asp-controller="Home" asp-action="Index"> НАЗАД </a>
           
    </div>
   
    <div class="main">

        <vc:room></vc:room>
        <div class="chat">
            @RenderBody()
        </div>
    </div>

    <div class="modal" id="create-room-modal">
        <form asp-area="" asp-controller="Chat" asp-action="CreateRoom" class="modal-body">
            <button type="button" class="close" onclick="closeModal()">X</button>
            <header>Добавить чат</header>
            <div>
                <input name="name">
            </div>
            <footer>
                <button>Создать</button>
            </footer>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/signalr.min.js" asp-append-version="true"></script>
    @RenderSectionAsync("Scripts",required: false)
</body>
</html>
