@model GraduationProject.Models.UpdateProfileModel

@{
    ViewData["Title"] = "Профиль";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ваш профиль</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProfileId" />

            <div class="form-group" method="post" enctype="multipart/form-data">
                При изменение загрузить заного - 
                <label asp-for="formFile" class="control-label"></label>
                <input asp-for="formFile" class="form-control" name="formFile" accept=".jpg,.png,.jpeg" />
                <span asp-validation-for="formFile" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSafeDeal" /> @Html.DisplayNameFor(model => model.IsSafeDeal)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AboutMe" class="control-label"></label>
                <input asp-for="AboutMe" class="form-control" />
                <span asp-validation-for="AboutMe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Services" class="control-label"></label>
                <input asp-for="Services" class="form-control" />
                <span asp-validation-for="Services" class="text-danger"></span>
            </div>
            <div class="form-group">
                Специализация
                <select asp-for="GetProfileName" asp-items="@Model.SelectedSpec" class="form-select">
                    <option disabled>Выберите специализацию</option>
                </select>
            </div>
            <hr />
            Нажмите - Подтвердить(если внесли изменения)
            <div class="form-group">
                <input type="submit" value="Подтвердить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


