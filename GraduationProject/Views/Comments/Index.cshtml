@model IEnumerable<GraduationProject.Data.Domains.Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Отзывы пользователя: </h1>

<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                Имя
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.IsPositive)
                {
                    <span style="background-color: green" class="badge" >+</span>
                }
            </td>
            <td>
                <!--Нужно брать имя а не ид-->
                @item.OwnerId
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
        </tr>
}
    </tbody>
</table>
