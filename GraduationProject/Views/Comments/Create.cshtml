@model GraduationProject.Data.Domains.Comment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Оставьте отзыв здесь!</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPositive" /> @Html.DisplayNameFor(model => model.IsPositive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Оставить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


